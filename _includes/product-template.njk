<div class="product-template">
<div class="image-viewer">
  <img src="{{ images[0].image }}" alt="{{ title }}" class="product-image">
</div>

<div class="image-thumb">
  {% for image in images | slice(0, 4) %}
    <img src="{{ image.image }}" onmouseover="updateImage(this)" {% if loop.index0 == 0 %}class="active"{% endif %}>
  {% endfor %}
</div>

<script>
  function updateImage(ele) {
    const product = ele.closest(".product-template");
    const viewer = product.querySelector(".image-viewer img");
    const thumbs = product.querySelectorAll(".image-thumb img");

    viewer.src = ele.src;

    thumbs.forEach(img => img.classList.remove("active"));
    ele.classList.add("active");
  }
</script>

  <h2>{{ title }}</h2>

  <div class="description">
    {{ description | safe }}
  </div>

  <a class="btn-coming-soon" aria-disabled="true" role="button" tabindex="-1">coming soon</a>
  <style>
    .btn-coming-soon {
      background: #cc305e;
      color: #fff;
      border-radius: 9999px;
      padding: 0.75rem 1.25rem;
      font: 600 0.95rem/1 system-ui, -apple-system, Segoe UI, Roboto, sans-serif;
      letter-spacing: .02em;
      text-transform: lowercase;
      opacity: 0.9;
      cursor: not-allowed;
      pointer-events: none; /* ensures no click */
      text-decoration: none;
      display: inline-block;
    }
  </style>
  {{ shopify_embed | safe }}
</div>
