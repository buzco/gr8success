{% extends "layout.njk" %}

{% block content %}
<div class="archive-wrapper">
<div class="images-block">
    {% for img in images %}
      {% if img.image %}
        <img src="{{ img.image }}" alt="{{ title }} image">
      {% else %}
        <img src="{{ img }}" alt="{{ title }} image">
      {% endif %}
    {% endfor %}
</div>

<div class="info-block">
  <div class="product-block">
    <p><h1 class="product-title">{{ title }}</h1></p>
    <p><h2>{{ price | safe }}</h2></p>
    <p>{{ description | safe }}</p>
    <p>{{ shopify_embed | safe }}</p>
    <p>{{ product_specs | safe }}</p>

  </div>

  <div class="product-block product-dropdown">
    <details>
      <summary>How to wash our garments</summary>
      <p>Wash cold, inside out, no dryer. Iron inside-out if needed.</p>
    </details>
  </div>

  <div class="product-block product-dropdown">
    <details>
      <summary>Size guide</summary>
      <p><a href="{{ size_guide_url }}" style="color: #00c389; text-decoration: underline;">Click here to view the size guide</a></p>
    </details>
  </div>
</div>

{% endblock %}
